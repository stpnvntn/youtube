.search
  top 0
  position absolute
  width 285px
  height 40px
  box-shadow 0 2px 2px 0 rgba(0,0,0,0.16), 0 0 0 1px rgba(0,0,0,0.08)
  transition box-shadow 200ms cubic-bezier(0.4, 0.0, 0.2, 1), top 200ms cubic-bezier(0.4, 0.0, 0.2, 1), transform 100ms 100ms
  margin 10px 0;
  left 50%
  transform translate(-50%, 0);
  font-size 0
  border 0
  vertical-align top

  &.-centred
    top 50%
    transform translate(-50%, -50%)

  &:hover
    box-shadow 0 3px 8px 0 rgba(0,0,0,0.2), 0 0 0 1px rgba(0,0,0,0.08)

  @media (min-width: tablet-query)
    width 640px

  @media (min-width: laptop-query)
    width 800px

  @media (min-width: laptop-large-query)
    width 960px

  input#search
    font-size 25px
    line-height 40px
    background main-background-color
    display inline-block
    padding 10px;
    width 80%
    height 40px
    border 0
    box-sizing border-box
    color text-main-color
    vertical-align top

    @media (min-width: laptop-query)
      width 720px

    @media (min-width: laptop-large-query)
      width 880px

    &::placeholder
      color text-secondary-color

  button#searchButton
    display inline-block
    height 40px
    width 20%
    background youtube-color
    color main-background-color
    border 0
    box-sizing border-box
    @media (min-width: laptop-query), (min-width: laptop-large-query)
      width 80px


